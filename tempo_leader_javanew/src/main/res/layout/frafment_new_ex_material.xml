<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/FileNameInput"
            app:endIconMode="clear_text"
            app:helperTextEnabled="true"
            app:boxBackgroundMode="outline"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:selectAllOnFocus="true"
                android:textColor="#0f1af3"
                android:textSize="25sp"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:inputType="text"
                android:text="@string/newExer"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/delayTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/DelayOfStartInputNew"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:text="@string/DelayValue"
                android:textColor="#0f1af3"
                android:textSize="25sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="@string/Create"
            android:elevation="4dp"
            android:backgroundTint="#85EC6D"/>
        <!--        если нужно надпись с рамкой то так вроде лучший вариант-->
        <!--        android:background="@drawable/ramka2"-->
        <!--        а если плоскую кнопку с заливкой то так - слишком узкая кнопка с тёмной заливкой-->
        <!--        android:backgroundTint="@color/colorPrimary"-->
        <!--        а если просто надпись то так - не смотрится как кнопка-->
        <!--        style="?attr/borderlessButtonStyle"-->
        <!--        если нужно приподнятую кнопку с заливкой, то так-->
        <!--        android:elevation="4dp"-->
        <!--        android:backgroundTint="#85EC6D"-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/Fragment"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mark1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:text="@string/FragmentOfSet1"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/Fragment"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mark2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:text="@string/FragmentOfSet2"
                    android:textSize="20sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/Fragment"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mark3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:text="@string/FragmentOfSet3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/Fragment"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mark4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:text="@string/FragmentOfSet4"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/Fragment"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mark5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:text="@string/FragmentOfSet5"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vert_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelTimeSec"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/timeValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelTimeSec"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/timeValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelTimeSec"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/timeValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelTimeSec"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/timeValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelTimeSec"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/timeValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vert_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelCountReps"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reps1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="@string/repsValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelCountReps"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reps2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="@string/repsValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelCountReps"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reps3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="@string/repsValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelCountReps"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reps4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="@string/repsValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lebelCountReps"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reps5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="@string/repsValue_item1"
                    android:focusable="true"
                    android:selectAllOnFocus="true"
                    android:textColor="#0f1af3"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
