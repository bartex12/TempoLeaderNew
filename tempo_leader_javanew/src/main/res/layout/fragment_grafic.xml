<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#80cff2da"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_layout_timeGraf"
        android:background="#d6fae3"
        android:weightSum="1"
        android:paddingBottom="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewName_TimeGraf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:text="New Text"
            android:textColor="@android:color/background_dark"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#72f5a4"
        android:id="@+id/linearLayoutDivider"
        android:layout_marginBottom="5dp">
    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/graphPace"
        android:layout_gravity="start"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#72f5a4"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="5dp">
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headOfList"
        android:stretchColumns="*">

        <TableRow
            android:padding="5dp"
            android:background="#d6fae3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


            <TextView
                android:id="@+id/item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/NN_"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:text="@string/time_"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/delta_time_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="9"
                android:text="@string/krug"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#72f5a4"
        android:id="@+id/linearLayout3">
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_grafic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
    </androidx.recyclerview.widget.RecyclerView>


<!--    <ListView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/listViewTiming"-->
<!--        />-->
</LinearLayout>